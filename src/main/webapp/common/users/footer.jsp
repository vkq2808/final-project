<%@ page language="java" pageEncoding="UTF-8"%>

<!DOCTYPE html>
<html>
<head>
    <style>
        /* Để trung tâm nội dung trong footer */
        .container {
            text-align: center;
        }

        /* Để cách biệt tiêu đề và hàng cách khoảng 20px */
        h1 {
            margin-top: 20px;
        }

        /* Để thay đổi màu nền và màu chữ của footer */
        footer {
            background-color: #333; /* Màu nền đen đậm */
            color: #fff; /* Màu chữ trắng */
            padding: 20px 0; /* Khoảng cách giữa nội dung và viền footer */
            position: fixed; /* Đặt footer ở vị trí cố định */
            bottom: 0; /* Đặt footer ở phía dưới cùng của trang */
            width: 100%; /* Đảm bảo footer chiếm toàn bộ chiều rộng của trang */
        }
    </style>
</head>
<body>
    <footer class="text-light">
        <div class="container">
            <div class="row">
                <h1 >Vũ Khánh Quốc- 21110848 - Đề 03</h1>
            </div>
        </div>
    </footer>
</body>
</html>