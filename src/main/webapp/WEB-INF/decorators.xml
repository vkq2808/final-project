<decorators defaultdir="/decorators">

	<decorator name="admin" page="admin.jsp">

		<pattern>/admin*</pattern>

	</decorator>
	
	<decorator name="users" page="users.jsp">

		<pattern>/*</pattern>

	</decorator>
	<decorator name="chat" page="chat.jsp">

		<pattern>/chat*</pattern>

	</decorator>
